<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLinks}}

</head>

<body>
    {{>navbar}}

    <!-- main header -->
    <div class="continaer-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your City Name" autocomplete="off">
                        <input type="submit" value="Search" id="submitBtn">
                    </form>
                </div>

                <div class="temp_info">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">31 Jan</p>
                    </div>
                    <div class="main_layer">
                        <div id="city_name">Get Output</div>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span></span> <sup></sup></p>
                            <p id="temp_status"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- start footer -->
    {{>footer}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/script.js"></script>

</body>

</html>
